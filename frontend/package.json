{
	"name": "grapheditor-frontend",
	"version": "0.0.0",
	"private": true,
	"author": "Mihajlo Lazar, Stefan Seliger",
	"license": "AGPL-3.0-or-later",
	"type": "module",
	"engines": {
		"node": "22.20.0",
		"npm": "10.9.3"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"test": "npm run test:unit",
		"test:unit": "vitest",
		"test:coverage": "vitest run --coverage",
		"preview": "vite preview --port 8080",
		"lint": "eslint src --ext .ts --ext .tsx",
		"lint:fix": "eslint src --ext .ts --ext .tsx --fix",
		"prettier:fix": "prettier --write src",
		"dependencies:check": "ncu --peer",
		"dependencies:update": "ncu --peer --upgrade --install always",
		"generate-icon-font": "node ./scripts/generate-icon-font.js",
		"setup": "npm install && allow-scripts",
		"setup:ci": "npm ci && allow-scripts"
	},
	"dependencies": {
		"@db-ux/react-core-components": "^4.2.3",
		"@floating-ui/react": "^0.27.16",
		"@sigma/edge-curve": "^3.1.0",
		"@sigma/node-border": "^3.0.0",
		"@sigma/node-square": "^3.0.0",
		"@sigma/utils": "^3.0.0",
		"axios": "^1.13.2",
		"clsx": "^2.1.1",
		"graphology": "^0.26.0",
		"graphology-layout": "^0.6.1",
		"graphology-layout-force": "^0.2.4",
		"graphology-layout-forceatlas2": "^0.10.1",
		"graphology-layout-noverlap": "^0.4.2",
		"i18next": "^25.7.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"i18next-http-backend": "^3.0.2",
		"jsdom": "^27.3.0",
		"lucide-react": "^0.556.0",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"react-hook-form": "^7.68.0",
		"react-i18next": "^16.4.0",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.10.1",
		"seedrandom": "^3.0.5",
		"sigma": "^3.0.2",
		"source-map-js": "^1.2.1",
		"yup": "^1.7.1",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@cyclonedx/cyclonedx-npm": "^4.1.2",
		"@db-ux/icon-font-tools": "^0.3.6",
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.1",
		"@lavamoat/allow-scripts": "^3.4.1",
		"@lavamoat/preinstall-always-fail": "^2.1.1",
		"@types/hoist-non-react-statics": "^3.3.7",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/react-router-dom": "^5.3.3",
		"@types/seedrandom": "^3.0.8",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/browser": "^4.0.15",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15",
		"autoprefixer": "^10.4.22",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-xo": "^0.49.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.5.0",
		"license-compliance": "^3.0.1",
		"lucide-static": "^0.556.0",
		"msw": "^2.12.4",
		"npm-check-updates": "^19.1.2",
		"playwright": "^1.57.0",
		"playwright-chromium": "^1.57.0",
		"postcss": "^8.5.6",
		"prettier": "^3.7.4",
		"sass": "^1.95.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vite-plugin-checker": "^0.12.0",
		"vite-plugin-svgr": "^4.5.0",
		"vitest": "^4.0.15",
		"vitest-browser-react": "^2.0.2"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"lavamoat": {
		"allowScripts": {
			"@cyclonedx/cyclonedx-npm>libxmljs2": true,
			"@db-ux/icon-font-tools>svgtofont>ttf2woff2": true,
			"@lavamoat/preinstall-always-fail": false,
			"msw": true,
			"playwright-chromium": true,
			"sass>@parcel/watcher": true,
			"vite>esbuild": true
		}
	}
}
